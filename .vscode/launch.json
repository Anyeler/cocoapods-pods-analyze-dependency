    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug CocoaPods",
            "request": "launch",
            "script": "${GEM_HOME}/bin/pod",
            "cwd": "${workspaceFolder}",
            "args": [
                "install",
                "--verbose"
            ],
            "env": {
                "LANG": "en_US.UTF-8"
            },
            "useBundler": false,
            "askParameters": false
        }
    ]
}
